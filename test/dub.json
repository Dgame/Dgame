{
    "name":         "dgame",
    "description":  "A 2D framework for the D programming Language",
    "homepage":     "http://dgame-dev.de",
    "authors":  	["Randy SchÃ¼tt"],
    "license":      "Zlib/PNG License",
    "sourcePaths":  ["."],
    "dependencies": {
        "derelict-sdl2": ">=1.1.9",
        "derelict-gl3": ">=1.0.9",
        "m3": ">=0.0.4"
    },
    "configurations": [
        {
            "name": "main",
            "targetName": "dgame-example",
            "targetType": "executable",
            "sourceFiles": ["main.d"],
            "excludedSourceFiles": ["tut.d"]
        },
        {
            "name": "lib",
            "targetType": "sourceLibrary",
            "excludedSourceFiles": ["main.d"]
        }
    ],
    "buildTypes": {
        "dg_debug": {
            "buildOptions": ["debugMode", "debugInfoC", "alwaysStackFrame", "warnings"]
        },
        "dg_release": {
            "buildOptions": ["releaseMode", "inline", "optimize", "noBoundsCheck", "warnings"]
        }
    },
    "sourcePaths": ["../"]
}